    <Grid Background="#282D33">

        <Button x:Name="AddBtn" HorizontalAlignment="Right" Margin="0,0,250,15" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=ButtonStyle3}" Click="AddTaskButton_Click"/>
        <Button x:Name="EditAdminPass" HorizontalAlignment="Left"  Margin="250,0,0,15" VerticalAlignment="Bottom" Style="{StaticResource ResourceKey=ButtonStyle7}" Click="EditAdminPass_Click"/>

        <ListView  x:Name="UsersListView" HorizontalAlignment="Center"  VerticalAlignment="Top"  ScrollViewer.HorizontalScrollBarVisibility="Visible"  Height="360" Margin="0,0,0,0" d:ItemsSource="{d:SampleData ItemCount=6}"  Foreground="#FFFFDD00" FontSize="19" FontWeight="DemiBold" SelectionMode="Single"  >
 
            <ListView.View  >
                <GridView  >
                    <GridViewColumn Header="حذف المستخدم" Width="185" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="Delete"   Style="{StaticResource ResourceKey=ButtonStyle4}" Click="Delete_Click" Margin="25,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="تعديل المستخدم" Width="192"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="updateUser"  Style="{StaticResource ResourceKey=ButtonStyle5}" Click="updateUser_Click"  Margin="25,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="مخطط الأمبير"     Width="170" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="50,0,0,0" Text="{Binding AmperChartM}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="تفاصيل المخرج"    Width="185">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="65,0,0,0" Text="{Binding ExitDetailsM}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="مدة التشغيل المخرج"    Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="75,0,0,0" Text="{Binding ExitDurM}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="مدة التشغيل المحطة" DisplayMemberBinding="{Binding StationDurm}"  Width="225">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="90,0,0,0" Text="{Binding StationDurm}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="المحطات"   Width="135">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="50,0,0,0" Text="{Binding StationMenu}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="المخارج"   Width="135">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="50,0,0,0" Text="{Binding ExitsMenu}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="تشغيل وإيقاف"  Width="175">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="50,0,0,0" Text="{Binding TurnMenu}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--<GridViewColumn Header="الرئيسية" DisplayMemberBinding="{Binding Main}" Width="130" />-->
                    <GridViewColumn Header="كلمة المرور" >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="30,0,0,0" Text="{Binding password}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="المستخدم"  >
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  Margin="30,0,0,0" Text="{Binding username}" TextAlignment="Center" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>



                </GridView>
            </ListView.View>
        </ListView>
    

        <Popup x:Name="AddTaskPopup" IsOpen="False" StaysOpen="False" Placement="Center"  PopupAnimation="Scroll">
            <Border x:Name="border" CornerRadius="5" 
                                            BorderBrush="#FF838383" Width="900" Height="300">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF4D4D4D" Offset="1"/>
                        <GradientStop Color="#FF3F3E54" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,40,0,0" >
                        <StackPanel Orientation="Horizontal" Margin="40,0,0,0">
                            <materialDesign:PackIcon Kind="Lock" Width="25" Height="35" Foreground="White"/>
                            <PasswordBox x:Name="txtPassword" Margin="10 0" materialDesign:HintAssist.Hint="    أدخل كلمة المرور" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" TabIndex="1" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="40,0,0,0">
                            <materialDesign:PackIcon Kind="User" Width="25" Height="35" Foreground="White"/>
                            <TextBox x:Name="txtUsername" Margin="10 0" materialDesign:HintAssist.Hint=" أدخل اسم المستخدم" Foreground="White" Width="250" BorderBrush="White" CaretBrush="#FFD94448" SelectionBrush="#FFD94448" TabIndex="0"  />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0,35,0,0" >
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0" >
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,150,0">


                                <CheckBox  x:Name="StationChk"  Content="المحطات"   IsChecked="True" Width="95" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="ExitsMenuChk"  Content="المخارج"   IsChecked="True" Width="85" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="TurnMenuChk"  Content="التشغيل والإيقاف"   IsChecked="True" Width="155" Height="30"  Margin="0,0,0,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <CheckBox  x:Name="AmperChartMChk"  Content="مخطط الأمبير"   IsChecked="True" Width="125" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="ExitDetailsMChk"  Content="تفاصيل المخرج"   IsChecked="True" Width="137" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="ExitDurMChk"  Content="مدة تشغيل المخرج"   IsChecked="True" Width="162" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="StationDurmChk"  Content="مدة تشغيل المحطة"   IsChecked="True" Width="168" Height="30"  Margin="0,0,0,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>

                        </StackPanel>
                        <TextBlock Text=": الصلاحيات" FontSize="30" Height="45" Margin="22,0,15,0" FontWeight="Bold" Foreground="#FFDD00" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,50,0">

                            <Button x:Name="closeBtn"  Style="{StaticResource ResourceKey=ButtonStyle2}" Click="CancelTaskButton_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,50,0">

                            <Button x:Name="enterBtn"  Style="{StaticResource ResourceKey=ButtonStyle}" Click="enterBtn_Click"/>
                        </StackPanel>


                    </StackPanel>
                </StackPanel>
            </Border>

        </Popup>


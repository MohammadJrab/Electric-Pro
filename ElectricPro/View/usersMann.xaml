                                <CheckBox  x:Name="PerExitDurMChk"  Content="مدة تشغيل المخرج"   IsChecked="False" Width="162" Height="30"  Margin="0,0,10,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>

                                <CheckBox  x:Name="PerStationDurmChk"  Content="مدة تشغيل المحطة"   IsChecked="False" Width="168" Height="30"  Margin="0,0,0,15"  VerticalAlignment="Bottom"  Style="{StaticResource MaterialDesignLightCheckBox}"  Foreground="White" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>

                        </StackPanel>
                        <TextBlock Text=": الصلاحيات" FontSize="30" Height="45" Margin="22,0,15,0" FontWeight="Bold" Foreground="#FFDD00" />

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,50,0">

                            <Button x:Name="pop2closeBtn" Click="pop2closeBtn_Click" Style="{StaticResource ButtonStyle2}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,50,0">

                            <Button x:Name="EditEnterBtn"   Click="EditEnterBtn_Click" Style="{StaticResource ButtonStyle6}"/>
                        </StackPanel>


                    </StackPanel>
                </StackPanel>
            </Border>

